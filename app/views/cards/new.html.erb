<h4>Создание новой карточки</h4>
<%= simple_form_for :card, url: cards_path do |f| %>
  <%= f.input :original_text, :label => "original text" %>
  <%= f.input :translated_text, :label => "translated text" %>
  <%= f.input :review_date, as: :date, start_year: Date.today.year - 90,
                                       end_year: Date.today.year + 90, 
                                       month: Date.today.month, 
                                       day: Date.today.day, 
                                       order: [:day, :month, :year] %><br>
  <%= f.button :submit %> 
<% end %>

